#!/usr/bin/env bash
# firstboot script for leftos

if [ "$(whoami)" == "root"]; then
    echo "Do not run as root"
    exit 1
fi

cfg="/usr/share/leftos/configs"
mkdir ~/.config/leftwm/../dunst/../alacritty/../fish

echo "Moving configs"
cp -r $cfg/leftwm ~/.config/leftwm
cp $cfg/dunstrc ~/.config/dunst
cp -r $cfg/rofi/ ~/.config/
cp $cfg/alacritty.yml ~/.config/alacritty/
cp $cfg/config.fish ~/.config/fish